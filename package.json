{
    "name": "edi-support",
    "displayName": "edi-support",
    "description": "Provides basic support for the EDI format.",
    "version": "0.0.1",
    "publisher": "Silvenga",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:edi"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "edi",
            "aliases": ["Electronic Data Interchange", "edi"],
            "extensions": [".edi"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "edi",
            "scopeName": "source.edi",
            "path": "./syntaxes/edi.tmLanguage.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "tslint": "tslint -c tslint.json src/**/*.ts"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^3.2.0",
        "tslint": "^4.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    }
}